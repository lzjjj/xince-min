/**index.wxss**/

.test::-webkit-scrollbar {
  display: none;
}

.test {
  background: gainsboro;
  width: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

scroll-view::-webkit-scrollbar {
  display: none;
}

scroll-view {
  width: 100%;
  height: 550px;
  padding-bottom: 15%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.left {
  width: 100%;
  display: flex;
  padding: 3%;
  box-sizing: border-box;
}

.right {
  width: 100%;
  display: flex;
  padding: 3%;
  flex-direction: row-reverse;
  box-sizing: border-box;
}

.head {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
}

.talkbubble_left {
  margin-left: 3%;
}

.talkbubble_right {
  margin-right: 3%;
  background-color: rgba(159, 231, 88, 1);
}

.talkbubble_img {
  width: 73.5%;
}

.talkbubble_text {
  max-width: 73.5%;
  padding: 0.5rem;
  box-sizing: border-box;
}

.talkbubble {
  /* margin: 1%; */
  background: white;
  position: relative;
  -moz-border-radius: 0.5rem;
  -webkit-border-radius: 0.5rem;
  border-radius: 0.5rem;
  /* text-align: center; */
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
}

.talkbubble>image {
  margin: 5% 1% 5% 1%;
  width: 90%;
  /* height: 90%;  */
  height: 10rem;
}

.talkbubble_left:before {
  border-right: 5px solid white;
  right: 100%;
}

.talkbubble_right:before {
  border-left: 5px solid rgba(159, 231, 88, 1);
  left: 100%;
}

.talkbubble:before {
  content: "";
  position: absolute;
  top: 10px;
  width: 0;
  height: 0;
  border-top: 5px solid transparent;
  border-bottom: 5px solid transparent;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0.4rem 0;
  background-color: white;
  overflow-x: scroll;
  /* 内容会被裁剪，会以滚动条显示 */
  white-space: nowrap; /* 不换行 */
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.start_button {
  width: 90%;
  height: 2.5rem;
  line-height: 2.5rem;
  font-size: 0.9rem;
  background-color: rgba(159, 231, 88, 1);
}

.option_button {
  width: 5rem;
  margin: 0 0.2rem;
  height: 2.5rem;
  line-height: 2.5rem;
  font-size: 0.9rem;
  background-color: rgba(159, 231, 88, 1);
}
