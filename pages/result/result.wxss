/* pages/result/result.wxss */

page {
  background-color: #fff;
}

.result {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-bottom: 3rem;
   overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.bgImg {
  z-index: -1;
  position: relative;
  width: 100%;
  height: 12rem;
}

.head_title {
  z-index: 20;
  margin-top: -12.2rem;
  width: 100%;
  height: 12rem;
  background-color: rgba(150, 150, 150, 0.5);
  box-sizing: border-box;
}

.title {
  color: #fff;
  padding-top: 0.5rem;
  padding-left: 0.5rem;
  font-size: 0.8rem;
}

.title1, .title2 {
  text-align: center;
  font-size: 1.2rem;
  font-weight: bold;
  font-family: wst_germ;
  color: white;
}

.descrition {
  padding: 1rem;
  font-size: 0.8rem;
  font-family: "仿宋";
  line-height: 1.2rem;
  border-bottom:1px solid #f8f8f8; 
}

.bottm {
  margin-top: 0.5rem;
   margin-bottom: 3rem; 
  flex: 0 0 auto;
  text-align: center;
  font-weight: bold;
}

.money_botton {
  margin-top: 1rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.unactive {
  width: 3.5rem;
  height: 1.5rem;
  line-height: 1.5rem;
  border: 1px solid gainsboro;
  border-radius: 0.3rem;
  color: gray;
}

.active_extra {
  border: 2px solid orange;
  color: orange;
}

.extra_result {
  font-size: 0.6rem;
}

.ercode {
  margin-top: 2rem;
  width: 6rem;
  height: 6rem;
  border: 1px solid black;
  border-radius: 0.2rem;
}

.code_dec {
  font-size: 0.5rem;
   width: 40%; 
   margin: 0.6rem  auto 0 auto; 
}

.bottom_left {
  flex: 1;
  display: flex;
  align-items: center;
}

.bottm_center {
  font-size: 0.7rem;
  padding-left: 0.2rem;
}

.bottm_center_first {
  padding-bottom: 0.8rem;
  color: red;
}

.bottm_right {
  font-weight: normal;
  font-size: 0.6rem;
  float: right;
  margin-top: -1rem;
   padding-right: 0.5rem; 
}

.result_buttom {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  text-align: center;
  font-size: 0.8rem;
}

.result_buttom_up {
  color: #fff;
  height: 2.8rem;
  line-height: 2.8rem;
  width: 40%;
  background-color: orange;
}

.result_buttom_down {
  border-radius: 0;
  border:0 solid rgb(255, 214, 0);
  height: 2.8rem;
  line-height: 2.8rem;
  width: 60%;
  background-color: rgb(255, 214, 0);
}
