/* pages/payPage/payPage.wxss */

.paypage_item_img {
   width: 100%; 
  height: 9.58rem;
   position: relative; 
}

.test_name {
  margin-top: -3rem;
  box-sizing: border-box;
  width: 100%;
  height: 2.79rem;
  background-color: rgba(139, 135, 132, 0.5);
  opacity: 0.5;
  line-height: 2.79rem;
  padding-left: 0.625rem;
  color: #fff;
  font-size: 0.875rem;
}

.decoration {
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 0.7rem 0.625rem 1.67rem 0.625rem;
}

.decoration_head {
  display: flex;
  align-items: center;
}

.box {
  width: 0.29rem;
  height: 1.27rem;
  background-color: #ff5a6e;
}

.box_text {
  box-sizing: border-box;
  padding-left: 0.22rem;
  font-size: 0.83rem;
  color: #9f9f9f;
}

.decoration_text {
  padding-top: 0.67rem;
  color: #343434;
  font-size: 0.83rem;
}

.notice {
  margin-top: 0.54rem;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 0.7rem 0.625rem 1.23rem 0.625rem;
}

.notice_item {
  font-size: 0.83rem;
  padding: 0.678rem 0 0 0.678rem;
  display: flex;
  justify-content: space-between;
}

.notice_item_left {
  color: #131313;
}

.notice_item_right {
  color: #ec6d80;
}

.change_sex {
  padding-top: 1.27rem;
  color: #ec6d80;
  text-align: center;
  font-size: 0.83rem;
}

.pay_button {
  margin-top: 1.23rem;
  width: 95%;
  background-color: #fc5f72;
  border-radius: 0.42rem;
  font-size: 0.92rem;
  color: #fff;
}

.tip {
  margin-top: 0.54rem;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 0.7rem 0.625rem 1.23rem 0.625rem;
}

.tip_item {
  font-size: 0.83rem;
  padding: 0.678rem 0 0 0.678rem;
}

.pop_nav {
  position: relative;
  z-index: 101;
  width: 90%;
  background-color: #fff;
  text-align: center;
  border-radius: 0.25rem;
  padding-bottom: 1.25rem;
}

.pop_nav_title {
  width: 100%;
  padding: 0.2rem 0.2rem 0.5rem 0.2rem;
  box-sizing: border-box;
  border-bottom: 1px dashed #ec6d80;
  color: #ec6d80;
}

.pop_cancel {
  width: 1rem;
  height: 1rem;
  position: absolute;
  right: 1%;
  top: 0.2rem;
}
.selection{
  margin-top: 1.5rem;
  display: flex;
  justify-content: space-around;
}
.selection>view{
  width: 30%;
  height: 2rem;
  border: 1px solid  #ec6d80;
  line-height: 2rem;
  border-radius: 0.5rem;
}
.unselect{
   color:  #ec6d80; 
  background-color: #FFFFFF;
  
}
.select{
  background-color: #ec6d80;
  color: #FFFFFF;
}
.pop_sure{
  margin: 1.5rem auto 0 auto;
  width: 30%;
  height: 2rem;
  border: 1px solid  #ec6d80;
  line-height: 2rem;
  border-radius: 0.4rem;
  color: #FFFFFF;
  background-color: #ec6d80;
}
