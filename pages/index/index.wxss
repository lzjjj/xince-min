/* pages/index/index.wxss */

.up {
  width: 100%;
  background-color: #fff;
}

.head {
  display: flex;
}

.head>input {
  padding-left: 2%;
  margin-left: 2.9%;
  margin-top: 2%;
  width: 75%;
  height: 1.9rem;
  border: 1px solid #d0d0d0;
  border-radius: 0.3rem;
}

.head>button {
  font-family: "YouYuan";
  font-size: 0.7rem;
  color: #929292;
  margin-top: 2%;
  border: 1px solid #fff;
  line-height: 1.9rem;
  width: 17%;
  height: 1.9rem;
  background-color: #e8e2e2;
}

swiper {
  margin-top: 0.5rem;
  width: 100%;
  height: 6.08rem;
}

.slide-image {
  width: 100%;
  height: 6.08rem;
}

.title {
  padding-bottom: 0.4rem;
  margin-top: 0.8rem;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  color: 	#6B6B6B;
  font-size: 0.84rem;
  border-bottom: 1px solid #f5f5f5;
}

.title_left {
  padding-left: 0.78rem;
}

.title_right {
  padding-right: 0.78rem;
}

.four_part {
  display: flex;
  justify-content: space-around;
  margin-top: 0.46rem;
}

.partImg {
  border-radius: 0.2rem;
  width: 3.9rem;
  height: 3.9rem;
}

.part_title {
  margin-top: 0.38rem;
  margin-bottom: 0.57rem;
  font-family: YouYuan;
  text-align: center;
  font-size: 0.84rem;
  color: #020202;
}



.pop_update {
  position: relative;
  z-index: 101;
  width: 90%;
  background-color: #fff;
  text-align: center;
  border-radius: 0.25rem;
   padding-bottom: 1.33rem; 
}

.pop_update_title {
  font-size: 1.09rem;
  color: #eb767e;
  padding: 0.77rem 1.04rem 0.85rem 1.04rem;
  box-sizing: border-box;
  border-bottom: 1px gainsboro dashed;
}

.pop_tip {
  position: absolute;
  left: 0;
  top: 0;
  width: 2.625rem;
  height: 2.6875rem;
}

.index_pop_hide {
  position: absolute;
  width: 1.46rem;
  height: 1.46rem;
  right: 0.77rem;
  top: 0.645rem;
}

.update_item {
  padding: 0.58rem 0 0.58rem 1.02rem;
  display: flex;
  align-items: center;
  border-bottom: 1px gainsboro dashed;
}

.update_item_title{
  padding-left: 0.46rem;
  color: #eb767e;
  font-size: 0.8125rem;
}

.dot {
  width: 0.29rem;
  height: 0.29rem;
  border-radius: 50%;
  display: inline-block;
  background-color: #eb767e;
}
.hide_button{
  width: 37%;
  height: 2.27rem;
  background-color:#eb767e;
  color: #ffffff;
  margin-top: 1.42rem;
  font-size:0.9375rem; 
  line-height: 2.27rem;
}
